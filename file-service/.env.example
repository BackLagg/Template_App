# Server Configuration
PORT=3002
NODE_ENV=development

# API Key for server-to-server communication
# В development режиме не обязателен, в production обязателен
FILE_API_KEY=your-secret-api-key-here

# Rate Limiting Configuration (optional)
# Окно времени в миллисекундах (по умолчанию 15 минут = 900000)
RATE_LIMIT_WINDOW_MS=900000
# Максимальное количество запросов за окно времени (по умолчанию 100)
RATE_LIMIT_MAX=100

# Body Parser Limits (optional)
# Лимит размера JSON тела запроса (по умолчанию 50mb)
BODY_JSON_LIMIT=50mb
# Лимит размера urlencoded тела запроса (по умолчанию 50mb)
BODY_URLENCODED_LIMIT=50mb

# CORS Configuration (optional)
# В development: разрешены все origins (по умолчанию)
# В production: false (запрещены все) или конкретные домены через запятую
# Пример: CORS_ORIGIN=https://example.com,https://www.example.com
# CORS_ORIGIN=

# HTTPS Enforcement (optional)
# Принудительное перенаправление на HTTPS в production
# Установите в true для production окружения
ENFORCE_HTTPS=false

# S3 Configuration (optional)
# Включить использование S3 хранилища
S3_ENABLED=false
# Регион S3
S3_REGION=us-east-1
# Access Key ID для S3
S3_ACCESS_KEY_ID=
# Secret Access Key для S3
S3_SECRET_ACCESS_KEY=
# Имя S3 bucket
S3_BUCKET_NAME=
# Кастомный endpoint для S3-совместимых хранилищ (например, MinIO)
# S3_ENDPOINT=http://localhost:9000
S3_ENDPOINT=
# URL CloudFront CDN (опционально, если используется CDN)
# S3_CDN_URL=https://d1234567890.cloudfront.net
S3_CDN_URL=

# Local Storage Configuration
# Путь к локальному хранилищу файлов
STORAGE_PATH=./storage
# Максимальный размер файла в байтах (по умолчанию 50MB = 52428800)
MAX_FILE_SIZE=52428800
# Разрешенные расширения файлов (через запятую)
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,svg,webp,bmp,tiff,tif,ico,pdf,doc,docx,xls,xlsx,txt,csv,json,xml,zip,rar,7z
